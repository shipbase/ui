{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@ui/tsconfig/tsconfig.vue.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
