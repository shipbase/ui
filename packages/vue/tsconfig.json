{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@ui/tsconfig/tsconfig.vue.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
