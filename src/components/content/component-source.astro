---
import fs from "node:fs"

import CodeWrapper from "./code-wrapper.astro"

export interface Props {
  name: string
}

const { name } = Astro.props

const codeString = (() => {
  try {
    return fs.readFileSync(`./src/registry/default/ui/${name}.tsx`, "utf-8")
  } catch (e) {
    console.error(e)
    return "Not yet available"
  }
})()
---

<CodeWrapper slot="code" src={codeString} />
