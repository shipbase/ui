---
import { Code as AstroCode } from "astro:components"

import { CopyButton } from "../copy-button"

export interface Props {
  codeString: string
}

const { codeString } = Astro.props
---

<div class="relative">
  <CopyButton
    value={codeString}
    variant="outline"
    client:visible
    className="absolute right-4 top-4 h-7 w-7 text-zinc-50 bg-transparent border-none hover:bg-zinc-700 [&_svg]:h-3.5 [&_svg]:w-3.5"
  />
  <AstroCode
    code={codeString}
    lang="tsx"
    theme="github-dark-default"
    class="px-4 max-h-[350px] overflow-x-auto rounded-lg text-sm border py-4"
  />
</div>
