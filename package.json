{
  "name": "ui",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "bump": "taze -r -l",
    "dev": "turbo dev",
    "test": "turbo run test",
    "build": "turbo run build",
    "check": "biome check",
    "repocheck": "sherif",
    "check-types": "turbo run check-types",
    "clean": "rimraf -g **/node_modules **/dist **/.turbo **/.astro",
    "gen": "turbo gen"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@turbo/gen": "^2.1.3",
    "@types/node": "^20.16.11",
    "dotenv": "^16.4.5",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "sherif": "^1.0.0",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.17.2",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2",
    "vite": "^5.4.3"
  },
  "packageManager": "pnpm@9.12.1",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
