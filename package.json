{
  "name": "ui",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18 <19"
  },
  "scripts": {
    "bump": "pnpm dlx taze@latest -r -l",
    "build": "turbo build",
    "clean": "pnpm dlx rimraf -g **/node_modules **/dist **/.turbo **/.astro",
    "check:type": "turbo check:type",
    "dev": "turbo dev",
    "test": "turbo test",
    "format": "biome check --linter-enabled=false",
    "format:fix": "biome check --linter-enabled=false --write --unsafe",
    "lint": "biome lint",
    "lint:fix": "biome lint --write --unsafe",
    "lint:workspace": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:workspace",
    "prepare": "simple-git-hooks",
    "version": "changeset version && pnpm run format"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@turbo/gen": "^2.3.3",
    "@types/node": "^20.17.9",
    "dotenv": "^16.4.7",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vite": "catalog:vite6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
