{
  "name": "ui",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "bump": "taze -r -l",
    "dev": "turbo watch dev",
    "build": "turbo run build",
    "check": "biome check",
    "check:write": "biome check --write",
    "check-types": "turbo run check-types",
    "clean": "rimraf -g **/node_modules **/dist **/.turbo **/.astro",
    "gen": "turbo gen"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@turbo/gen": "^2.1.1",
    "@types/node": "^20.16.2",
    "dotenv": "^16.4.5",
    "lint-staged": "^15.2.9",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.7",
    "turbo": "^2.1.1",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.9.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm check:write"
  }
}
